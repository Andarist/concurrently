{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES2019",
        "lib": ["ES2019"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "include": ["./bin", "./declarations", "./src", "index.ts", "package.json"]
}
